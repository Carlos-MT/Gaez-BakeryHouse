    <Shell.FlyoutHeader>
        <views:CustomFlyoutHeaderPage/>
    </Shell.FlyoutHeader>
    <FlyoutItem Title="Inicio">
        <ShellContent ContentTemplate="{DataTemplate views:HomePage}"/>
        <Shell.ItemTemplate>
            <DataTemplate>
                <Grid RowDefinitions="50">
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroupList>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="Selected">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor"
                                    Value="{x:OnPlatform Android=#F2F2F2, iOS=#F2F2F2}" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateGroupList>
                    </VisualStateManager.VisualStateGroups>
                    <StackLayout Margin="10" 
                                 Orientation="Horizontal"
                                 Spacing="20">
                        <controls:CustomLabel Style="{StaticResource shellIconStyle}"
                                              Text="{Static fonts:IconFont.HomeOutline}"/>
                        <controls:CustomLabel Style="{StaticResource shellLabelStyle}"
                                              Text="{Binding Title}"/>
                    </StackLayout>
                </Grid>
            </DataTemplate>
        </Shell.ItemTemplate>
    </FlyoutItem>
