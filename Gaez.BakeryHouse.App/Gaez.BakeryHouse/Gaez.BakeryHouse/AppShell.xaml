                        <Label Text="{Binding Title}"
                               VerticalOptions="Center"
                               FontAttributes="None"
                               Style="{StaticResource lblSmallStyle}"/>
                    </StackLayout>
                </Grid>
            </DataTemplate>
        </Shell.ItemTemplate>
    </FlyoutItem>
    <FlyoutItem Title="Mi carrito">
