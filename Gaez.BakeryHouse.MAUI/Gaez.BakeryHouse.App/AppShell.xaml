            <DataTemplate>
                <Grid RowDefinitions="50">
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroupList>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor"
                                                Value="Transparent" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Selected">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor"
                                                Value="#FFDAC3"/>
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateGroupList>
                    </VisualStateManager.VisualStateGroups>
                    <StackLayout Margin="10" 
                                 Orientation="Horizontal"
                                 Spacing="20">
                        <controls:CustomLabel Style="{StaticResource iconStyle}"
                                              Text="{Static fonts:IconFont.HomeOutline}"/>
                        <controls:CustomLabel Text="{Binding Title}"
                                              TextColor="Black"
                                              VerticalOptions="CenterAndExpand"/>
                    </StackLayout>
                </Grid>
            </DataTemplate>
        </Shell.ItemTemplate>
    </FlyoutItem>
